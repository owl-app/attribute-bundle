{% if attribute.value is not null %}
    {% set values = attribute.attribute.configuration.choices %}
    {% if attribute.value is iterable %}
        {% for value in attribute.value %}
            {% if values[value]['name'] is not empty %}
                {{ values[value]['name'] }}{% if loop.last == false %}, {% endif %}
            {% endif %}
        {% endfor %}
    {% else %}
        {% if values[attribute.value]['name'] is not empty %}
            {{ values[attribute.value]['name'] }}
        {% endif %}
    {% endif %}
{% endif %}
